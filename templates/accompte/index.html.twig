{% extends 'base.html.twig' %}

{% block title %}Accompte index{% endblock %}

{% block body %}
    <h1>Accompte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Payer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accompte in accomptes %}
            <tr>
                <td>{{ accompte.id }}</td>
                <td>{{ accompte.prix }}</td>
                <td>{{ accompte.date ? accompte.date|date('Y-m-d') : '' }}</td>
                <td>{{ accompte.payer ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_accompte_show', {'id': accompte.id}) }}">show</a>
                    <a href="{{ path('app_accompte_edit', {'id': accompte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_accompte_new') }}">Create new</a>
{% endblock %}
