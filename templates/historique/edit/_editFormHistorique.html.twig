<!-- Modal -->
<div class="modal fade" id="editHistModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-center" id="staticBackdropLabel">
                </h1>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.historique, 'historique') }}
                {{ form_widget(form.historique, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="modal-footer">
                {% if historique.contact != null %}
                <a href={{path('app_contact_edit',{'id' : historique.contact.id})}}>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
                </a>
                {% endif %}
                <button type="button submit" class="btn btn-primary">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    // jappelle le modal apres 3 secondes
    window.setTimeout(affichageModal, 000);

    function affichageModal() {
        const myModal = new bootstrap.Modal(document.getElementById('editHistModal'), {})
        myModal.show();
    };
    // la doc !
    // https://getbootstrap.com/docs/5.2/components/modal/#how-it-works
</script>