{% extends 'base.html.twig' %}

{% block title %}StatutMail index{% endblock %}

{% block body %}
    <h1>StatutMail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut_mail in statut_mails %}
            <tr>
                <td>{{ statut_mail.id }}</td>
                <td>{{ statut_mail.statut }}</td>
                <td>
                    <a href="{{ path('app_statut_mail_show', {'id': statut_mail.id}) }}">show</a>
                    <a href="{{ path('app_statut_mail_edit', {'id': statut_mail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_statut_mail_new') }}">Create new</a>
{% endblock %}
