{% extends 'base.html.twig' %}

{% block title %}{{profession.contact.nom}} {{profession.contact.prenom}}{% endblock %}

{% block body  %}

<!-- Modal -->
<div class="modal fade" id="editProfModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-center" id="staticBackdropLabel">
                </h1>
            </div>
            <div class="modal-body">
            {{ form_start(form) }}
            {{ form_label(form.profession, 'Profession') }}
            {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.poste, 'Poste') }}
            {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="modal-footer">
            <a href={{ path('app_entreprise_edit',{'id' : profession.entreprise.id})}}>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
            </a>

                <button type="button submit" class="btn btn-primary">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    // jappelle le modal apres 3 secondes
    window.setTimeout(affichageModal, 020);

    function affichageModal() {
        const myModal = new bootstrap.Modal(document.getElementById('editProfModal'), {})
        myModal.show();
    };
    // la doc !
    // https://getbootstrap.com/docs/5.2/components/modal/#how-it-works
</script>

{% endblock %}