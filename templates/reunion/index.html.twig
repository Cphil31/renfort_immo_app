{% extends 'base.html.twig' %}

{% block title %}Reunion index{% endblock %}

{% block body %}
    <h1>Reunion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objet</th>
                <th>Date</th>
                <th>Content</th>
                <th>CoutLocationSalle</th>
                <th>CoutLocationMateriel</th>
                <th>CoutRestauration</th>
                <th>CoutCollation</th>
                <th>Duree</th>
                <th>ForfaitHoraire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{{ reunion.id }}</td>
                <td>{{ reunion.objet }}</td>
                <td>{{ reunion.date ? reunion.date|date('Y-m-d') : '' }}</td>
                <td>{{ reunion.content }}</td>
                <td>{{ reunion.coutLocationSalle }}</td>
                <td>{{ reunion.CoutLocationMateriel }}</td>
                <td>{{ reunion.CoutRestauration }}</td>
                <td>{{ reunion.coutCollation }}</td>
                <td>{{ reunion.duree ? reunion.duree|date('H:i:s') : '' }}</td>
                <td>{{ reunion.forfaitHoraire }}</td>
                <td>
                    <a href="{{ path('app_reunion_show', {'id': reunion.id}) }}">show</a>
                    <a href="{{ path('app_reunion_edit', {'id': reunion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reunion_new') }}">Create new</a>
{% endblock %}
