{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Liste des contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom | upper}}</td>
                <td>{{ contact.prenom }}</td>
                <td>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-success btn-sm">Détail</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contact_new') }}" class="btn btn-primary btn-sm">Créer un nouveau contact</a>
{% endblock %}
