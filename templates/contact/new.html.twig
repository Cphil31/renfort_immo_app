{% extends 'base.html.twig' %}

{% block title %}Ajouter Contact{% endblock %}

{% block body %}
<!-- Modal -->
<div class="modal fade" id="newContactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-center" id="staticBackdropLabel">
                Ajouter Contact
                </h1>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.prenom, 'Prenom') }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                
            </div>
            <div class="modal-footer">
                
                <a href={{ path("app_contact_index" )}}>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
                </a>

                <button type="button submit" class="btn btn-primary">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    // jappelle le modal apres 3 secondes
    window.setTimeout(affichageModal, 000);

    function affichageModal() {
        const myModal = new bootstrap.Modal(document.getElementById('newContactModal'), {})
        myModal.show();
    };
    // la doc !
    // https://getbootstrap.com/docs/5.2/components/modal/#how-it-works
</script>
{% endblock %}