<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newTelModal">
  Ajouter un téléphone
</button>

<!-- Modal -->
<div class="modal fade" id="newTelModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter un téléphone</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{ form_start(formTel) }}
        {{ form_label(formTel.statut, 'statut') }}
        {{ form_widget(formTel.statut, {'attr': {'class': 'form-select'}}) }}
        {{ form_label(formTel.number, 'numéro') }}
        {{ form_widget(formTel.number, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formTel.observation, 'observation') }}
        {{ form_widget(formTel.observation, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
        <button type="button submit" class="btn btn-primary">Ajouter</button>
      </div>
      {{ form_end(formTel) }}
    </div>
  </div>
</div>