<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newMailModal">
  Ajouter mail
</button>

<!-- Modal -->
<div class="modal fade" id="newMailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter mail</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{ form_start(formMail) }}
        {{ form_label(formMail.statut, 'statut') }}
        {{ form_widget(formMail.statut, {'attr': {'class': 'form-select'}}) }}
        {{ form_label(formMail.email, 'email') }}
        {{ form_widget(formMail.email, {'attr': {'class': 'form-control'}}) }}

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
        <button type="button submit" class="btn btn-primary">Ajouter</button>
      </div>
      {{ form_end(formMail) }}
    </div>
  </div>
</div>