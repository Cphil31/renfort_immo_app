{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    {% if resultContact %}

        
        <ul>

            <h1>Contacts</h1> 

            {% for c in resultContact %}
               
                {% if  c.nom and c.prenom %}
                    <li>
                        <a href={{ path("app_contact_edit",{"id" : c.id}) }}>
                            
                            {{c.nom |capitalize }}
                            {{c.prenom |capitalize }}
                            </a>
                    </li>
                {% else %}
                            aucun contact
                {% endif %}


            {% endfor %}
        </ul>



    {% else  %}

        
    {% endif %}
    {% if resultProduit  %}
       
        {{ resultProduit ? "<h1>Produits</h1>" : " "}}
        <ul>
            {% for p in resultProduit %}
                <li>
                    <a href={{ path("app_produit_edit",{"id" : p.id}) }}>
                        {{p.name |capitalize }}
                    </a>
                </li>
            {% endfor %}
        </ul>

    {% else %}

      
    {% endif %}

    {% if resultMission %}

        <h1>Missions</h1>
        
        <ul>
            {% for m in resultMission %}
                <li>
                    <a href={{ path("app_produit_edit",{"id" : m.id}) }}>
                        {{m.name |capitalize }}
                    </a>
                </li>
            {% endfor %}
        </ul>


    {% else %}

     
    {% endif %}



  
</div>
{% endblock %}
