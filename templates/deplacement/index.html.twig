{% extends 'base.html.twig' %}

{% block title %}Deplacement index{% endblock %}

{% block body %}
    <h1>Deplacement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Duree</th>
                <th>Cout</th>
                <th>CoutPeage</th>
                <th>CoutCarburant</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deplacement in deplacements %}
            <tr>
                <td>{{ deplacement.id }}</td>
                <td>{{ deplacement.lieu }}</td>
                <td>{{ deplacement.date ? deplacement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ deplacement.duree ? deplacement.duree|date('H:i:s') : '' }}</td>
                <td>{{ deplacement.cout }}</td>
                <td>{{ deplacement.coutPeage }}</td>
                <td>{{ deplacement.coutCarburant }}</td>
                <td>{{ deplacement.observation }}</td>
                <td>
                    <a href="{{ path('app_deplacement_show', {'id': deplacement.id}) }}">show</a>
                    <a href="{{ path('app_deplacement_edit', {'id': deplacement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_deplacement_new') }}">Create new</a>
{% endblock %}
