                        <th scope="row"> {{nbrProduit}}</th>
                        <td> 
                            <a href={{ path("app_produit_edit", {"id" : produit.id} ) }} >
                                {{ produit.name | capitalize }} 
                            </a>
                        </td>
                        <td> 
                            {{ produit.localisation }} 
                        </td>
                        
                        <td>
                            {{ include('mission/edit/_etatDesLieuxList.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    
{% endif %}