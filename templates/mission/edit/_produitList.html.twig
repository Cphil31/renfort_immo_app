{% if mission.produit.snapshot %}
        <h4> <span class="orange">Bien concern√©s</span>  : </h4>

        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Localisation</th>
                <th scope="col">Etats des lieux</th>
                </tr>
            </thead>
            <tbody>
                {% set nbrProduit = 0 %}
                {% for produit in mission.produit.snapshot %}
                    
