<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#noteDeFrais">
  Note de frais
</button>

<!-- Modal -->
<div class="modal fade" id="noteDeFrais" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Note de frais</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       {{ form_start(formNoteDeFrais) }}
          {{ form_label(formNoteDeFrais.month, 'Mois') }}
          {{ form_widget(formNoteDeFrais.month, {'attr': {'class': 'form-control'}}) }}
          {{ form_label(formNoteDeFrais.year, 'Année') }}
          {{ form_widget(formNoteDeFrais.year, {'attr': {'class': 'form-control'}}) }}
          {{ form_label(formNoteDeFrais.payer, 'Regler') }}
          {{ form_widget(formNoteDeFrais.payer, {'attr': {'class': '' }} ) }}
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">fermer</button>
        <button type="button submit" class="btn btn-primary btn-sm">Générer</button>
      </div>
      {{ form_end(formNoteDeFrais) }}

      
    </div>
  </div>
</div>