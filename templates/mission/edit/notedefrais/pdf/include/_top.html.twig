      <img src= {{logo}} alt="" class="img relative">
        <p class="titre relative" style="margin-top: -30px;font-size:30px;margin-left:380px;">
            Notes de frais : 
            {{ month }} /
            {{ year }}
        </p>
        
        
        <p class="relative" style="font-size:20px;">
            Mission :
            {{ mission.name ? mission.name }}
        </p>
       
        {% if contact %}
            <p class="relative" style="margin-top:-300px;margin-left:500px;font-size:20px;">
                Client :
                    {{contact.nom}}
                    {{contact.prenom}}
                    {{contact.entreprise}}
                    {% if adresse %}
                        
                        Adresse :
                        <span style="font-size:18px;">  
                            {{adresse.rue}}
                            <br>
                            {{ adresse.ville ? adresse.ville }}
                            {{adresse.codePostal ? ", " ~ adresse.codePostal }}
                            </span>
                        {% endif %}
            </p>
        {% endif %}

        {% if mission %}
            <p class="relative" style="margin-top:-200px;margin-left:500px;font-size:18px;margin-bottom:10px;">
            </p>
        {% endif %}


        {% if mission %}   
            <p class="relative" style="font-size:20px;margin-top:24px;">
            Référence :
                {{mission.reference | capitalize }}
            </p>
        {% endif %}
 
       
