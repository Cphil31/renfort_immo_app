{% if forfaits %}
                {% set nbrForfait = 0 %}
                <table class="table" >
                    <thead>
                        <tr>
                            <th scope="col">Forfaits</th>
                            <th scope="col">Description</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Reglement</th>
                            <th scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>
                            {% for f in forfaits %}
                                {% set nbrForfait = nbrForfait + 1 %}
                                
                                <tr>
                                    <th scope="row">{{f.date |date('d/m/Y')}}</th>
                                    <td>{{ f.description ? f.description  : " "}}</td>
                                    <td>
                                            {{ f.prix ?  f.prix ~ " €" : " "}}
                                        
                                    </td>
                                    <td>
                                        {% if f.payer %}
                                            réglé
                                        {% else %}
                                         pas réglé
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href={{ path('app_forfait_edit' , { 'id' : f.id } ) }} class="btn btn-success btn-sm">
                                            modifier
                                        </a>
                                    </td>
                                    
                                </tr>
                            {% endfor %}
                                <tr>
                                    <th scope="row"> </th>
                                    <td></td>
                                    <td></td>
                                    <td>{{ totalForfait ? totalForfait ~ " €" : ""}}</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                        
                    </tbody>
                </table>
                    
        {% endif %}