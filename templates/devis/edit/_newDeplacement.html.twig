<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newDevDepModal">
  Ajouter Déplacement
</button>

<!-- Modal -->
<div class="modal fade" id="newDevDepModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter Déplacement</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        {{ form_start(formDeplacement) }}
          {{ form_label(formDeplacement.quantite, 'Quantité') }}
          {{ form_widget(formDeplacement.quantite, {'attr': {'class': 'form-control'}}) }}
          {{ form_label(formDeplacement.prix, 'Prix unitaire') }}
          {{ form_widget(formDeplacement.prix, {'attr': {'class': 'form-control'}}) }}

        
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">fermer</button>
            <button type="button submit" class="btn btn-primary btn-sm">Ajouter</button>
          </div>
        {{ form_end(formDeplacement) }}
    </div>
  </div>
</div>