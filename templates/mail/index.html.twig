{% extends 'base.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Liste des mail</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Email</th>
                <th>Objet</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.createdAt ? mail.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mail.email }}</td>
                <td>{{ mail.objet }}</td>
                <td>
                    <a href="{{ path('app_mail_show', {'id': mail.id}) }}">d√©tail</a>
                </td>
                <td>
                    <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">modifier</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mail_new') }}">Create new</a>
{% endblock %}
