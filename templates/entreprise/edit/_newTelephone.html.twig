<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#telephoneEntrepriseModal">
    Ajouter Telephone
</button>

<!-- Modal -->
<div class="modal fade" id="telephoneEntrepriseModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter Telephone</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(formTel) }}
                {{ form_label(formTel.statut, 'statut') }}
                {{ form_widget(formTel.statut, {'attr': {'class': 'form-select'}}) }}
                {{ form_label(formTel.number, 'num√©ro') }}
                {{ form_widget(formTel.number, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(formTel.observation, 'observations') }}
                {{ form_widget(formTel.observation, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(formTel) }}
            </div>
        </div>
    </div>
</div>