<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#AdresseEntrepriseModal">
    Ajouter Adresse
</button>

<!-- Modal -->
<div class="modal fade" id="AdresseEntrepriseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">  Ajouter Adresse</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(formAdresse) }}
                {{ form_label(formAdresse.statut, 'Statut') }}
                {{ form_widget(formAdresse.statut, {'attr': {'class': 'form-select'}}) }}
