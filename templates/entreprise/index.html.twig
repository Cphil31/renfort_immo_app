{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Liste des Entreprises</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Raison_sociale</th>
                <th>Siret</th>
                <th>Naf</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.raisonSociale | capitalize }}</td>
                <td>{{ entreprise.siret }}</td>
                <td>{{ entreprise.naf }}</td>
                <td>
                    <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-success btn-sm">détail</a>
                </td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entreprise_new') }}" class="btn btn-primary btn-sm">Créer une entreprise</a>
{% endblock %}
