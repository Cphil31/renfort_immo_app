
<div>
	<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newHistoriqueModal">
		Ajouter un historique
	</button>

	<!-- Modal -->
	<div class="modal fade" id="newHistoriqueModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter un historique</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
				
					{{ form_start(formHistorique) }}
                    {{ form_label(formHistorique.title, 'Title') }}
					{{ form_widget(formHistorique.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(formHistorique.historique, 'Historique') }}
					{{ form_widget(formHistorique.historique, {'attr': {'class': 'form-control'}}) }}
					
			
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">fermer</button>
					<button type="button submit" class="btn btn-primary btn-sm">Ajouter</button>
                    {{ form_end(formHistorique) }}
				</div>
			</div>
		</div>
	</div>

</div>
