{% extends 'base.html.twig' %}

{% block title %}Edit Hebergement{% endblock %}

{% block body %}
    <h1>{{hebergement.lieu}}</h1>

<!-- Modal -->
<div class="modal fade" id="editTelephoneModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-center" id="staticBackdropLabel">
                   
                </h1>
            </div>
            <div class="modal-body">

            {{ form_start(form) }}
                {{ form_label(form.lieu, 'Lieu') }}
                {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.nuit, 'Nuit') }}
                {{ form_widget(form.nuit, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.coutNuitUnitaire, 'Cout unitaire') }}
                {{ form_widget(form.coutNuitUnitaire, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.date, 'Date') }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_label(form.payer, 'payer') }}
                {{ form_widget(form.payer) }}

            </div>
            <div class="modal-footer">
                
                <a href= {{ path( "app_tache_edit" , {'id' : hebergement.tache.id})}}>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
                </a>

                <button type="button submit" class="btn btn-primary">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    // jappelle le modal apres 3 secondes
    window.setTimeout(affichageModal, 000);

    function affichageModal() {
        const myModal = new bootstrap.Modal(document.getElementById('editTelephoneModal'), {})
        myModal.show();
    };
    // la doc !
    // https://getbootstrap.com/docs/5.2/components/modal/#how-it-works
</script>


{% endblock %}
