<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newTacheModal">
  Ajouter une tâche
</button>

<!-- Modal -->
<div class="modal fade" id="newTacheModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"> Ajouter une tâche</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{ form_start(formTache) }}
        {{ form_label(formTache.statut, 'Statut') }}
        {{ form_widget(formTache.statut, {'attr': {'class': 'form-select'}}) }}
        {{ form_label(formTache.description, 'Description') }}
        {{ form_widget(formTache.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formTache.date, 'Date') }}
        {{ form_widget(formTache.date, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">fermer</button>
        <button type="button submit" class="btn btn-primary btn-sm">Ajouter</button>
      </div>
      {{ form_end(formTache) }}
    </div>
  </div>
</div>