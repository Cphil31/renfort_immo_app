<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newProduitModal">
  Ajouter produit
</button>

<!-- Modal -->
<div class="modal fade" id="newProduitModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter produit</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{ form_start(formNewProduit) }}
        {{ form_label(formNewProduit.name, 'Nom') }}
        {{ form_widget(formNewProduit.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.identification, 'Identification') }}
        {{ form_widget(formNewProduit.identification, {'attr': {'class': 'form-select'}}) }}
        {{ form_label(formNewProduit.etat, 'Etat') }}
        {{ form_widget(formNewProduit.etat, {'attr': {'class': 'form-select'}}) }}
        {{ form_label(formNewProduit.localisation, 'Localisation') }}
        {{ form_widget(formNewProduit.localisation, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.carTechniques, 'Caractéristiques Techniques') }}
        {{ form_widget(formNewProduit.carTechniques, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.carJuridiques, 'Caractéristiques Juridiques') }}
        {{ form_widget(formNewProduit.carJuridiques, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.carCommerciales, 'Caractéristiques Commerciales') }}
        {{ form_widget(formNewProduit.carCommerciales, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.environement, 'environement') }}
        {{ form_widget(formNewProduit.environement, {'attr': {'class': 'form-control'}}) }}
        {{ form_label(formNewProduit.observation, 'Observation') }}
        {{ form_widget(formNewProduit.observation, {'attr': {'class': 'form-control'}}) }}


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">fermer</button>
        <button type="button submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(formNewProduit) }}
      </div>
    </div>
  </div>
</div>